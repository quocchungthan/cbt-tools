extends layout

block content
  +back()
  .card
    h3 New Translation Job
    form#create-form
      label Source Markdown
        select(name='sourceMarkdownId', id='sourceMarkdownId', required)
          option(value='') Select source markdown…
      label Target Language
        select(name='targetLang', id='targetLang', required)
          option(value='') Select language…
      label Strategy
        select(name='strategy', id='strategy')
          option(value='') Select strategy…
      button(type='submit') Create Job
      span#status
  .card
    h3 Jobs
    button#refresh-jobs Refresh
    table
      thead
        tr
          th ID
          th Source
          th Lang
          th Strategy
          th Status
          th Created
      tbody#jobs
  .card
    h3 Translated Markdown
    button#refresh-md Refresh
    table
      thead
        tr
          th Translation ID
          th Source
          th Lang
          th Path
          th Created
      tbody#markdowns
  .card
    h3 Fine-tune Sentences
    form#tune-load
      label Translation ID
        input(name='translationId', required)
      button(type='submit') Load
    form#tune-form(style='margin-top:.5rem; display:none;')
      #sentences
      button(type='submit') Save Updates
      span#tune-status
  script(src='/assets/translate.js')