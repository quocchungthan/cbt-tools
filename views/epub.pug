extends layout

block content
  a(href='/') ‚Üê Back
  h1 Convert to EPUB
  .card
    form#create-form
      label Input Markdown IDs (comma separated)
        input(name='inputMarkdownIds', required)
      button(type='submit') Create Job
      span#status
  .card
    h3 Jobs
    button#refresh-jobs Refresh
    table
      thead
        tr
          th Job ID
          th Input Markdown IDs
          th Status
          th Created
      tbody#jobs
  .card
    h3 EPUBs
    button#refresh-epubs Refresh
    table
      thead
        tr
          th Job ID
          th Path
          th Created
      tbody#epubs
  script(src='/assets/epub.js')