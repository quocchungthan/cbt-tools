doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title CBT Tools
    style.
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 2rem; line-height: 1.5; }
      header { display: flex; gap: 1rem; align-items: center; flex-wrap: wrap; }
      nav a { margin-right: 1rem; text-decoration: none; color: #0366d6; }
      nav a:hover { text-decoration: underline; }
      .card { border: 1px solid #e1e4e8; border-radius: 8px; padding: 1rem; margin-top: 1rem; }
      table { border-collapse: collapse; width: 100%; }
      th, td { text-align: left; padding: .5rem; border-bottom: 1px solid #e1e4e8; }
      input, select, button, textarea { padding: .5rem; }
      pre { background: #f6f8fa; padding: 1rem; overflow: auto; border-radius: 6px; }
  body
    header
      h1(style="margin:0") CBT Tools
      nav
        a(href='/') Home
        a(href='/health') Health
        a(href='/settings') Settings
        a(href='/upload') Upload
        a(href='/convert-markdown') Convert Markdown
        a(href='/translate') Translate
        a(href='/compose') Compose
        a(href='/epub') EPUB
        a(href='/mail') Mail
        a(href='/orders') Orders
        a(href='/third-parties') Third Parties
        a(href='/search') API Search
        a(href='/api/docs', target='_blank', rel='noreferrer') Swagger
    block content