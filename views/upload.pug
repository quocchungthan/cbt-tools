extends layout

block content
  +back()
  h1 Upload
  .card
    form#upload-form(enctype='multipart/form-data')
      .form-controls
        input(type='file', name='file', required)
        button(type='submit') Upload
        span#status
  .card
    .row
      div(style='display:flex; gap: 20px; justify-content: start; align-items: center')
        strong Uploads
        button#refresh(type='button') Refresh
      table
        thead
          tr
            th Filename
            th MIME
            th Size
            th Created
        tbody#tbody
  script(src='/assets/upload.js')