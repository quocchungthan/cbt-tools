extends layout

block content
  a(href='/') ‚Üê Back
  h1 Convert Markdown
  .card
    form#create-form
      label Upload ID
        input(name='uploadId', required, placeholder='paste uploadId')
      label Command
        input(name='command', placeholder='optional')
      button(type='submit') Create Job
      span#status
  .card
    h3 Jobs
    button#refresh-jobs Refresh
    table
      thead
        tr
          th Job ID
          th Upload ID
          th Command
          th Status
          th Created
      tbody#jobs
  .card
    h3 Markdowns
    table
      thead
        tr
          th Markdown ID
          th Job ID
          th Path
          th Created
      tbody#markdowns
  script(src='/assets/convert-markdown.js')